<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false" >
        <shape android:shape="oval"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#f0f0f0" />
            <gradient android:angle="-90" android:startColor="#f0f0f0" android:endColor="#f0f0f0"  />
        </shape>
    </item>
    <item android:state_checked="true" >
        <shape android:shape="oval"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#f00000" />
            <gradient android:angle="-90" android:startColor="#f00000" android:endColor="#f00000"  />
        </shape>
    </item>
</selector>